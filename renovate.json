{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "description": "Comprehensive updates for Python, GitHub Actions, Docker, and Home Assistant base images.",
    "extends": [
        "config:recommended",
        ":separateMajorReleases",
        ":combinePatchMinorReleases"
    ],
    "github-actions": {
        "enabled": true
    },
    "dockerfile": {
        "fileMatch": [
            "(^|/)Dockerfile\\..+$",
            "(^|/)Dockerfile$"
        ]
    },
    "pip_requirements": {
        "fileMatch": [
            "(^|/)requirements\\.txt$",
            "(^|/)requirements-test\\.txt$"
        ]
    },
    "customManagers": [
        {
            "customType": "regex",
            "description": "Update Home Assistant addon base images in build.yaml",
            "fileMatch": [
                "^build\\.yaml$"
            ],
            "matchStrings": [
                "(?<arch>aarch64|amd64|armhf|armv7|i386):\\s+(?<depName>ghcr\\.io/home-assistant/[^:]+):(?<currentValue>\\S+)"
            ],
            "datasourceTemplate": "docker",
            "versioningTemplate": "docker"
        }
    ],
    "packageRules": [
        {
            "matchPackageNames": [
                "ghcr.io/home-assistant/**"
            ],
            "groupName": "Home Assistant Base Images"
        }
    ]
}