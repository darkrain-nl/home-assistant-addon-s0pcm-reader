{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "description": "Unified updates for S0PCM Reader",
    "extends": [
        "config:recommended",
        ":separateMajorReleases",
        ":combinePatchMinorReleases",
        ":disableDependencyDashboard"
    ],
    "baseBranches": [
        "dev"
    ],
    "ignorePaths": [
        "**/node_modules/**"
    ],
    "github-actions": {
        "enabled": true
    },
    "dockerfile": {
        "managerFilePatterns": [
            "/(^|/)Dockerfile$/",
            "/(^|/)Dockerfile\\.[^/]+$/"
        ]
    },
    "pip_requirements": {
        "managerFilePatterns": [
            "/(^|/)requirements\\.txt$/",
            "/(^|/)requirements\\.lock$/",
            "/(^|/)requirements-test\\.txt$/",
            "/(^|/)requirements-test\\.lock$/"
        ]
    },
    "customManagers": [
        {
            "customType": "regex",
            "description": "Fallback for test requirements",
            "managerFilePatterns": [
                "/(^|/)requirements-test\\.txt$/"
            ],
            "matchStrings": [
                "(?<depName>[a-zA-Z0-9._-]+)\\s*(?:==|>=|~=|>|<=|<)\\s*(?<currentValue>[a-zA-Z0-9._-]+)"
            ],
            "datasourceTemplate": "pypi"
        },
        {
            "customType": "regex",
            "description": "Home Assistant build.yaml base images",
            "managerFilePatterns": [
                "/(^|/)build\\.yaml$/"
            ],
            "matchStrings": [
                "(?<arch>aarch64|amd64):\\s+(?<depName>ghcr\\.io/home-assistant/[^:]+):(?<currentValue>\\S+)"
            ],
            "datasourceTemplate": "docker",
            "versioningTemplate": "docker"
        }
    ],
    "packageRules": [
        {
            "matchPackageNames": [
                "ghcr.io/home-assistant/**"
            ],
            "groupName": "Home Assistant Base Images"
        }
    ]
}